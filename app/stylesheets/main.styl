@import('nib')


amarillo = #FFFF01
color-agua = #00C5FF
color-aire = #80A9BC
color-fuego = #FF5100
color-madera = #00B200


body
	margin 0
	padding 0
	font-size 16px

figure
	margin 0
.content
	max-width 80%
	margin 0 auto

.header
	
	width 100%
	position relative
	&-content
		width 97%
		margin 0 auto
		display flex
		justify-content space-between
		align-items center
.nav
	padding 0 100px
	&-list
		display flex
		list-style none
		justify-content center
		padding 0
		margin 10px 0
		&-item
			margin-right 70px
			&:last-child
				margin-right 0
			a
				color #222
				text-decoration none
				display flex
				flex-direction column
				justify-content center
				align-items center
				text-shadow 0 0 1px amarillo
				div
					border-top 1px solid skyblue
					border-left 1px solid skyblue 
					border-right 4px solid skyblue 
					border-bottom 3px solid skyblue 
					padding 25px 20px
					border-radius 2px
					font-size 1.2em
					display flex
					flex-direction column
					align-items center
					justify-content center
					width auto
					width 75px
					height 85px
					
					img
						width 96%
						height 100%
						margin 5px
					
					
					
.header-info
	display flex 
	align-items center
	justify-content center
	font-size 25px
	line-height 20px
	hr
		margin 8px 0
	p
		margin 0
		text-align center
	p:first-child
		display flex
		flex-direction column
		justify-content center
		align-items center
		span
			color #444
			&:last-child
				color #000
				font-weight bold
		
	p:last-child
		margin 0					
					


.section
	margin 0
	&-intro
		padding 10px
		display flex
		justify-content center
		align-items center
		&-img
			width 300px
			height 300px
			border-radius 50%
			border 1px solid lightgray
		&-text
			width 650px
			font-size 20px
			line-height 28px
			
	&-images
		margin 100px 0
		display flex
		justify-content center
		&-item
			margin 10px 30px
			width 200px
			height 200px
			border 1px solid lightgray
			border-radius 50%
	&-more
		padding 10px
		display flex
		justify-content center
		align-items center
		
		&-img
			width 300px
			height 300px
			border-radius 50%
			border 1px solid lightgray
		&-text
			width 650px
			font-size 20px
			line-height 28px
			

.logo
	width 110px
	height 95px
	margin 0
	img
		width 100%
		height 100%












