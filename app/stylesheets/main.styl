.logo-full
	display flex
	align-items flex-end
	
	font-family 'PT Sans', sans-serif
	font-weight 700
	margin 0
	.E
		font-size 80px
	.cinco
		font-size 80px
		
		text-shadow 0 0 1px gray
		transform rotate(-15deg)
		margin-left -10px	
		margin-top -6px
.pacios
	color gray	
	font-size 3.8em
	margin 0 !important
	position relative
	top -8px
	left -6px

	
.footer
	font-size 16px
	color gray
	background #fff
	height 80px
	width 100%
	border-bottom 3px solid #000
	border-left 3px solid #000
	display flex
	align-items flex-end
	justify-content space-between
	position relative
	top 15px
	&-logo
		margin 0
		display flex
		font-size .8em
		&-img
			width 5em
